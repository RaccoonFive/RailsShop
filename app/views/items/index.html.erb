<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col s4">
        <div class="card">
          <div class="card-image">
            <img src="images/sample-1.jpg">
            <span class="card-title"><%= item.title %></span>
          </div>
          <div class="card-content">
            <p><%= item.content %></p>
          </div>
          <div class="card-action">
            <a href="#">This is a link</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
