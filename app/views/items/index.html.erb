<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col s4">
        <div class="card">
          <div class="card-image">
            <img src="images/sample-1.jpg">
            <span class="card-title"><a href="#" style="color: inherit"><%= item.title %></a></span>
          </div>
          <div class="card-content">
            <p><%= item.content %></p>
          </div>
          <div class="card-action">
            <%= link_to item.user.username, item.user %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
